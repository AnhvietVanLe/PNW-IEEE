<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br></br>
  <div>
    <%= form.label :profile_picture, style: "display: block" %>
    <%= form.file_field :profile_picture %>
  </div>

  <br></br>

  <div>
    <h5>Personal Information:</h5>
    <div style="display: flex;">

      <div style="flex: 1;">
        <%#= form.label :first_name %>
        <p>First Name:</p>
        <%= form.text_field :first_name %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :last_name %>
        <p>Last Name:</p>
        <%= form.text_field :last_name %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :email, style: "display: block" %>
        <p>Email:</p>
        <%= form.text_field :email %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :phone, style: "display: block" %> 
        <p>Phone Number:</p>
        <%= form.text_field :phone %>
      </div>

    </div>
  </div>

  <br></br>

  <div>
    <h5>IEEE Information:</h5>
    <div style="display: flex;">

      <div style="flex: 1;">
        <%#= form.label :ieee_membership_number, style: "display: block" %> 
        <p>IEEE Membership Number:</p>
        <%= form.text_field :ieee_membership_number %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :ieee_membership_grade, style: "display: block" %>
        <p>IEEE Membership Grade:</p>
        <%= form.text_field :ieee_membership_grade %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :is_ieee_membership_status_active, style: "display: block" %>
        <p>Is Active IEEE Member:</p>
        <%= form.check_box :ieee_membership_status %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :is_ieee_hkn_member, style: "display: block" %>
        <p>Is a IEEE-HKN member:</p>
        <%= form.check_box :ieee_hkn %>
      </div>

    </div>
  </div>

  <br></br>

  <div>
    <h5>Student Information:</h5>
    <div style="display: flex;">

      <div style="flex: 1;">
        <%#= form.label :major, style: "display: block" %>
        <p>Major:</p>
        <%= form.text_field :major %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :grade_year, style: "display: block" %>
        <p>Grade Year:</p>
        <%= form.text_field :grade_year %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :grad_date, style: "display: block" %>
        <p>Expected Graduation Date:</p>
        <%= form.date_field :grad_date %>
      </div>

    </div>
  </div>

  <br></br>

  <div>
    <h5>Social Media Information:</h5>
    <div style="display: flex;">

      <div style="flex: 1;">
        <%#= form.label :linkedin_username, style: "display: block" %>
        <p>LinkedIn Username:</p>
        <%= form.text_field :linkedin_username %>
      </div>

      <div style="flex: 1;">
        <%#= form.label :discord_username, style: "display: block" %>
        <p>Discord Username:</p>
        <%= form.text_field :discord_username %>
      </div>

    </div>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :member_user_id, class:"form-control", value: current_user.id, type: :hidden  %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>


