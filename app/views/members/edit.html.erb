<h1>Edit Profile</h1>

<br/>
<%= render "form", member: @member %>

<br>
<br/>
<div>
  <%= link_to "Show", @member, class: "btn btn-secondary" %> 
  <%= link_to "Back", members_path, class: "btn btn-dark"  %>
  <br><br/>
  <%= button_to "Delete Profile", @member, method: :delete, class: "btn btn-danger", id: "delete-profile-button" %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('delete-profile-button').addEventListener('click', function(event) {
      if (!confirm('Are you sure you want to delete this profile?')) {
        event.preventDefault();
      }
    });
  });
</script>
